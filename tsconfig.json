{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": ["src/**/*"]
}
